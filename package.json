{
  "name": "tron",
  "version": "0.1.0",
  "description": "Tron: A persistent, dual-interface coding agent with memory-first architecture",
  "type": "module",
  "private": true,
  "packageManager": "bun@1.2.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "check:native": "node ./scripts/check-native-module-compat.mjs",
    "setup": "./scripts/tron setup",
    "build": "bun run --cwd packages/agent build && bun run --cwd packages/tui build && bun run --cwd packages/chat-web build",
    "test": "bun run check:native && vitest run && cd packages/chat-web && bun run test",
    "test:agent": "bun run check:native && vitest run",
    "test:agent:unit": "bun run check:native && vitest run --exclude='**/__integration__/**'",
    "test:agent:integration": "bun run check:native && vitest run 'packages/agent/src/__integration__'",
    "test:chat": "cd packages/chat-web && bun run test",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint packages/*/src --ext .ts,.tsx",
    "typecheck": "bun run --cwd packages/agent typecheck && bun run --cwd packages/tui typecheck && bun run --cwd packages/chat-web typecheck",
    "clean": "rm -rf packages/*/dist packages/*/.turbo packages/*/tsconfig*.tsbuildinfo node_modules/.cache dist && rm -f bun.lock",
    "dev": "./scripts/tron dev",
    "dev:server": "cd packages/agent && bun run dev",
    "dev:tui": "cd packages/tui && bun run dev",
    "dev:chat": "cd packages/chat-web && bun run dev",
    "login": "cd packages/tui && bun run login",
    "logout": "cd packages/tui && bun run logout",
    "auth": "cd packages/tui && bun run auth",
    "tron": "./scripts/tron",
    "deploy": "./scripts/tron deploy"
  },
  "devDependencies": {
    "@types/bun": "^1.2.0",
    "bun-types": "^1.2.0",
    "@types/node": "^22.10.1",
    "@vitest/coverage-v8": "^3.0.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=24.12.0 <25"
  },
  "author": "Tron Agent Project",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "keywords": [
    "ai",
    "agent",
    "coding-assistant",
    "llm",
    "claude",
    "dual-interface"
  ]
}
