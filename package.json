{
  "name": "tron",
  "version": "0.1.0",
  "description": "Tron: A persistent, dual-interface coding agent with memory-first architecture",
  "type": "module",
  "private": true,
  "packageManager": "bun@1.2.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "node-gyp rebuild --release --directory=node_modules/.bun/better-sqlite3@11.10.0/node_modules/better-sqlite3 2>/dev/null || true",
    "setup": "./scripts/setup.sh",
    "build": "./scripts/build-workspace.sh",
    "build:prod": "./scripts/build.sh prod",
    "build:public": "./scripts/build.sh public",
    "test": "vitest run && cd packages/chat-web && bun run test",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint packages/*/src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf packages/*/dist packages/*/.turbo packages/*/tsconfig*.tsbuildinfo node_modules/.cache node_modules && rm -f bun.lockb",
    "dev": "./scripts/dev.sh",
    "dev:server": "cd packages/server && bun run dev",
    "dev:tui": "cd packages/tui && bun run dev",
    "dev:chat": "cd packages/chat-web && bun run dev",
    "login": "cd packages/tui && bun run login",
    "logout": "cd packages/tui && bun run logout",
    "auth": "cd packages/tui && bun run auth",
    "tron": "./scripts/tron",
    "tron:status": "./scripts/tron status",
    "tron:start": "./scripts/tron start",
    "tron:stop": "./scripts/tron stop",
    "tron:deploy": "./scripts/tron deploy",
    "tron:beta": "./scripts/tron beta",
    "tron:install": "./scripts/tron install",
    "deploy": "./scripts/tron deploy",
    "release": "./scripts/build.sh public",
    "manage": "./scripts/tron-manage"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@vitest/coverage-v8": "^3.0.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "author": "Tron Agent Project",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/tron.git"
  },
  "keywords": [
    "ai",
    "agent",
    "coding-assistant",
    "llm",
    "claude",
    "dual-interface"
  ]
}
