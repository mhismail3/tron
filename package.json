{
  "name": "tron",
  "version": "0.1.0",
  "description": "Tron: A persistent, dual-interface coding agent with memory-first architecture",
  "type": "module",
  "private": true,
  "packageManager": "bun@1.2.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "node-gyp rebuild --release --directory=node_modules/.bun/better-sqlite3@11.10.0/node_modules/better-sqlite3 2>/dev/null || true; ./scripts/init-tron-home.sh",
    "setup": "./scripts/tron setup",
    "build": "bun run --cwd packages/agent build && bun run --cwd packages/tui build && bun run --cwd packages/chat-web build",
    "test": "vitest run && cd packages/chat-web && bun run test",
    "test:agent": "vitest run",
    "test:agent:unit": "vitest run --exclude='**/__integration__/**'",
    "test:agent:integration": "vitest run 'packages/agent/src/__integration__'",
    "test:chat": "cd packages/chat-web && bun run test",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint packages/*/src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf packages/*/dist packages/*/.turbo packages/*/tsconfig*.tsbuildinfo node_modules/.cache dist && rm -f bun.lockb",
    "dev": "./scripts/tron dev",
    "dev:server": "cd packages/agent && bun run dev",
    "dev:tui": "cd packages/tui && bun run dev",
    "dev:chat": "cd packages/chat-web && bun run dev",
    "login": "cd packages/tui && bun run login",
    "logout": "cd packages/tui && bun run logout",
    "auth": "cd packages/tui && bun run auth",
    "tron": "./scripts/tron",
    "tron:status": "./scripts/tron status",
    "tron:start": "./scripts/tron start",
    "tron:stop": "./scripts/tron stop",
    "tron:dev": "./scripts/tron dev",
    "tron:deploy": "./scripts/tron deploy",
    "tron:install": "./scripts/tron install",
    "deploy": "./scripts/tron deploy"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@vitest/coverage-v8": "^3.0.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "author": "Tron Agent Project",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/tron.git"
  },
  "keywords": [
    "ai",
    "agent",
    "coding-assistant",
    "llm",
    "claude",
    "dual-interface"
  ]
}
