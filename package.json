{
  "name": "tron",
  "version": "0.1.0",
  "description": "Tron: A persistent, dual-interface coding agent with memory-first architecture",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "vitest run && npm run test --workspace=@tron/chat-web",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint packages/*/src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf packages/*/dist packages/*/.turbo node_modules/.cache",
    "dev:server": "npm run dev --workspace=@tron/server",
    "dev:tui": "npm run dev --workspace=@tron/tui",
    "dev:chat": "npm run dev --workspace=@tron/chat-web"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@vitest/coverage-v8": "^3.0.0",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "author": "Tron Agent Project",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/tron.git"
  },
  "keywords": [
    "ai",
    "agent",
    "coding-assistant",
    "llm",
    "claude",
    "dual-interface"
  ]
}
