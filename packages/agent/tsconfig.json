{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "composite": true,
    "declarationDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@core/*": ["./src/core/*"],
      "@infrastructure/*": ["./src/infrastructure/*"],
      "@llm/*": ["./src/llm/*"],
      "@context/*": ["./src/context/*"],
      "@runtime/*": ["./src/runtime/*"],
      "@capabilities/*": ["./src/capabilities/*"],
      "@interface/*": ["./src/interface/*"],
      "@platform/*": ["./src/platform/*"]
    }
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
